{
  "name": "criticaide",
  "version": "1.0.0",
  "description": "Critical Thinking Aid",
  "main": "main.js",
  "scripts": {
    "start": "set NODE_ENV=development && electron .",
    "dev": "set NODE_ENV=development && electron .",
    "build": "set NODE_ENV=production && electron-builder"
  },
  "build": {
    "appId": "com.criticaide.app",
    "productName": "Criticaide",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!resources/ollama/runners/*"
    ],
    "extraResources": [
      {
        "from": "resources/ollama/runners/${os}",
        "to": "bin",
        "filter": [
          "**/*"
        ]
      }
    ],
    "asarUnpack": [
      "resources/ollama/runners/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "resources/icons/icon.ico",
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "nsisWeb": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Criticaide",
      "uninstallDisplayName": "Criticaide",
      "installerIcon": "resources/icons/icon.ico",
      "uninstallerIcon": "resources/icons/icon.ico"
    },
    "linux": {
      "target": "AppImage"
    },
    "mac": {
      "target": "dmg"
    }
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "electron-log": "^5.2.4",
    "node-global-key-listener": "^0.3.0",
    "ollama": "^0.5.11"
  }
}
