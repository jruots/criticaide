{
  "name": "content-analyzer",
  "version": "1.0.0",
  "description": "Content Analysis Tool",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.contentanalyzer.app",
    "productName": "Content Analyzer",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!resources/ollama/runners/*"
    ],
    "extraResources": [
      {
        "from": "resources/ollama/runners",
        "to": "ollama/runners",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "resources/icons/icon.ico", 
      "artifactName": "${productName}-Setup-${version}.${ext}",
      "nsis": {
        "oneClick": false,         // Allow custom installation directory
        "allowToChangeInstallationDirectory": true,
        "createDesktopShortcut": true,
        "createStartMenuShortcut": true,
        "shortcutName": "Content Analyzer",
        "uninstallDisplayName": "Content Analyzer",
        "installerIcon": "resources/icons/icon.ico",
        "uninstallerIcon": "resources/icons/icon.ico"
      }
    },
    "linux": {
      "target": "AppImage"
    },
    "mac": {
      "target": "dmg"
    }
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "node-global-key-listener": "^0.3.0"
  }
}