{
  "name": "criticaide",
  "version": "0.2.0",
  "description": "Critical Thinking Aid",
  "main": "main.js",
  "scripts": {
    "start": "cross-env NODE_ENV=development electron .",
    "dev": "cross-env NODE_ENV=development electron .",
    "prebuild": "rimraf dist",
    "build": "set NODE_ENV=production && electron-builder",
    "prebuild:win": "rimraf dist",
    "build:win": "set NODE_ENV=production && electron-builder --win --publish never",
    "start:mac": "NODE_ENV=development electron .",
    "dev:mac": "NODE_ENV=development electron .",
    "prebuild:mac": "chmod +x resources/ollama/runners/mac/ollama-darwin",
    "build:mac": "NODE_ENV=production electron-builder --mac --publish never"
  },
  "build": {
    "appId": "com.criticaide.app",
    "productName": "Criticaide",
    "compression": "store",
    "directories": {
      "output": "dist",
      "buildResources": "build",
      "app": "."
    },
  "files": [
    "**/*",
    "!resources/llama/models/**/*"
  ],
  "extraResources": [
    {
      "from": "resources/llama/binaries/${os}",
      "to": "bin",
      "filter": ["**/*"]
    }
  ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "resources/icons/icon.ico",
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Criticaide",
      "uninstallDisplayName": "Criticaide",
      "installerIcon": "resources/icons/icon.ico",
      "uninstallerIcon": "resources/icons/icon.ico"
    },
    "mac": {
      "hardenedRuntime": true,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "resources/icons/icon.icns",
      "artifactName": "${productName}-${version}-${arch}.${ext}",
      "category": "public.app-category.utilities",
      "darkModeSupport": true
    }
  },
  "author": "jruots",
  "license": "MIT",
  "devDependencies": {
    "cross-env": "^7.0.3",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "rimraf": "^6.0.1"
  },
  "dependencies": {
    "electron-log": "^5.2.4",
    "electron-store": "^10.0.0",
    "node-global-key-listener": "^0.3.0"
  }
}