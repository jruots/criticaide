{
  "name": "criticaide",
  "version": "0.1.3",
  "description": "Critical Thinking Aid",
  "main": "main.js",
  "scripts": {
    "start": "cross-env NODE_ENV=development electron .",
    "dev": "cross-env NODE_ENV=development electron .",
    "build": "set NODE_ENV=production && electron-builder",
    "start:mac": "NODE_ENV=development electron .",
    "dev:mac": "NODE_ENV=development electron .",
    "prebuild:mac": "chmod +x resources/ollama/runners/mac/ollama-darwin",
    "build:mac": "NODE_ENV=production electron-builder --mac --publish never"
  },
  "build": {
    "appId": "com.criticaide.app",
    "productName": "Criticaide",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!resources/ollama/runners/*"
    ],
    "extraResources": [
      {
        "from": "resources/bin/${os}",
        "to": "bin",
        "filter": ["**/*"]
      },
      {
        "from": "resources/models",
        "to": "models",
        "filter": ["**/*"]
      }
    ],
    "asarUnpack": [
      "resources/ollama/runners/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "resources/icons/icon.ico",
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "nsisWeb": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Criticaide",
      "uninstallDisplayName": "Criticaide",
      "installerIcon": "resources/icons/icon.ico",
      "uninstallerIcon": "resources/icons/icon.ico"
    },
    "mac": {
      "hardenedRuntime": true,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "resources/icons/icon.icns",
      "artifactName": "${productName}-${version}-${arch}.${ext}",
      "category": "public.app-category.utilities",
      "darkModeSupport": true
    }
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "cross-env": "^7.0.3",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "electron-log": "^5.2.4",
    "electron-store": "^10.0.0",
    "node-global-key-listener": "^0.3.0",
    "ollama": "^0.5.11"
  }
}
